-#  This file is app/views/books/index.html.haml
%h1 All Books

%table#books
  %thead
    %tr
      %th Book Title
      %th Genre
      %th Publish Date
      %th ISBN
      %th More Info
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title 
        %td= book.genre
        %td= book.publish_date
        %td= book.isbn
        %td= link_to "More about #{book.title}", book_path(book)
= link_to 'Add new book', new_book_path