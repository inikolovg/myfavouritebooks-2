%h1 Similar books to #{@book.title}

%table#similar_books
  %thead
    %tr
      %th{:class => @title_header}= link_to 'Book Title', books_path(:sort => 'title'), :id => 'title_header'
      %th Genre
      %th{:class => @date_header}= link_to 'Publish Date', books_path(:sort => 'publish_date'), :id => 'publish_date_header'
      %th ISBN
      %th Author
      %th More Info
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title 
        %td= book.genre
        %td= book.publish_date
        %td= book.isbn
        %td= book.author
        %td= link_to "More info #{book.title}", book_path(book)